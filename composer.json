{
    "name": "bitandblack/document-crawler",
    "description": "Extract different parts of an HTML or XML document.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Tobias KoÌˆngeter",
            "email": "hello@bitandblack.com",
            "homepage": "https://www.bitandblack.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "bitandblack/composer-helper": "^2.0",
        "bitandblack/pathinfo": "^1.0",
        "fig/http-message-util": "^1.0",
        "php-http/discovery": "^1.0",
        "places2be/locales": "^3.3",
        "psr/http-client": "^1.0",
        "psr/http-client-implementation": "*",
        "psr/http-factory-implementation": "*",
        "symfony/css-selector": "^7.0 || ^8.0",
        "symfony/dom-crawler": "^7.0 || ^8.0"
    },
    "require-dev": {
        "bitandblack/helpers": "^2.0",
        "nyholm/psr7": "^1.8",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^11.0",
        "react/async": "^4.0",
        "react/http": "^1.0",
        "rector/rector": "^2.0",
        "symfony/http-client": "^7.0 || ^8.0",
        "symfony/var-dumper": "^7.0 || ^8.0",
        "symplify/easy-coding-standard": "^13.0"
    },
    "autoload": {
        "psr-4": {
            "BitAndBlack\\DocumentCrawler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BitAndBlack\\DocumentCrawler\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        },
        "sort-packages": true
    },
    "scripts": {
        "phpstan": "php vendor/bin/phpstan analyse --configuration ./phpstan.neon --memory-limit=-1 --ansi",
        "phpunit": "php vendor/bin/phpunit --configuration ./phpunit.xml --colors=always",
        "refactor": "php vendor/bin/rector && php vendor/bin/ecs --fix"
    },
    "scripts-descriptions": {
        "phpstan": "Runs PHPStan over the src folder and the tests folder.",
        "phpunit": "Runs PHPUnit.",
        "refactor": "Runs tools to refactor the code."
    }
}
